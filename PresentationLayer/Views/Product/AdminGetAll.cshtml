@using PresentationLayer.ViewModels
@{
	Layout = "_Layout2";
}
@model List<GetAllProductsVm>

<div class="hero">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-lg-5">
                <div class="intro-excerpt">
                    <h1>Welcome !</h1>
                    <h2 style="color:#fff;">This is the Admin Panel Page</h2>
                </div>
            </div>
            <div class="col-lg-7"></div>
        </div>
    </div>
</div>
<h2>Store Products</h2>
<div class="untree_co-section product-section before-footer-section">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-12 col-md-4 col-lg-3 mb-5">
                    <a class="product-item" href="/Product/Details/@item.Id">
                        <img src="/images/@item.Image"
                             class="img-fluid product-thumbnail" />
                        <h3 class="product-title">@item.Name</h3>
                        <strong class="product-price">@item.Price</strong>
                    </a>
                </div>
            }
        </div>
    </div>
</div>
<h2>Admin Control</h2>

<div style="display:flex; gap:50px;">
<div class="text-center mb-3">

    <a asp-controller="Product" asp-action="AddProduct" class="btn btn-success">
        <i class="bi bi-plus-lg"></i> Add New Product
    </a>
</div>

<div class="text-center mb-3">

    <a asp-controller="Role" asp-action="Index" class="btn btn-success">
        <i class="bi bi-plus-lg"></i> Roles List
    </a>
</div>
    <div class="text-center mb-3">
    
        <a asp-controller="Role" asp-action="CreateRole" class="btn btn-success">
            <i class="bi bi-plus-lg"></i> Add New Role
        </a>
    </div>

    <div class="text-center mb-3">

        <a asp-controller="Admin" asp-action="UserRolesList" class="btn btn-success">
            <i class="bi bi-plus-lg"></i> Assign Role to a User
        </a>
    </div>

</div>