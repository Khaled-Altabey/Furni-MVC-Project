@using BussinessLayer.DTOs
@{
    Layout = "_Layout2";
}
@model GetProductByIdDto
<div class="hero">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-lg-5">
                <div class="intro-excerpt">
                    <h2 style="color:#fff;">Confirm Order</h2>
                </div>
            </div>
            <div class="col-lg-7"></div>
        </div>
    </div>
</div>
<div
    >

<h2>Are you sure you want to delete "@Model.Name"?</h2>

<form asp-controller="Order" asp-action="Remove" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="CreateOrder" asp-controller="Order" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
</form>
</div>