@using PresentationLayer.ActionRequests
@model LoginUserActionRequest
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="/css/StyleLogin.css" rel="stylesheet" />
    <title>Login</title>
</head>
<body>
    <div class="wrapper">
        <div class="title-text">
            <div class="title login">Login Form</div> 
        </div>
        <div class="form-container">
            <div class="form-inner">
                <form asp-action="Login" asp-controller="Account" class="login">
                    <div asp-validation-summary="All"></div>
                    <div class="field">
                        <input asp-for="Name" placeholder="UserName" required />
                        <span asp-validation-for="Name" class="test-danger"></span>
                    </div>
                    <div class="field">
                        <input asp-for="Password" placeholder="Password" required />
                        <span asp-validation-for="Password" class="test-danger"></span>

                    </div>
                   <div class="form-group form-check">
                       <label class="form-check-label"/>
                       <div style="display:flex; gap:35px;">
                            <p>remember me</p>
                            <input asp-for="RememberMe" class="form-check-input" />
                       </div>
                  
                   </div>
                    <div class="field btn">
                        <div class="btn-layer"></div>
                        <input type="submit" value="Login" />
                    </div>
                    <div class="signup-link">
                        Not a member? <a asp-controller="Account" asp-action="Register">Signup now</a>
                    </div>
                </form>
                </div>
        </div>
    </div>
   

</body>
</html>

